<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Message>
    <% if @entry.unlock? %>
      The door will unlock in a moment! Please open the door when you hear it click. Welcome to CoworkBuffalo, <%= @member.name %>!
    <% elsif @entry.lock? %>
      Thanks for visiting CoworkBuffalo! The door is now locked.
    <% else %>
      Sorry, I didn't understand that. Please send another SMS with one of the following choices: <%= Entry::TAGS.join(', ') %>
    <% end %>
  </Message>
</Response>
