<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Message>
    <% if @knock.unlock? %>
      The door is now unlocked. Welcome to CoworkBuffalo, <%= @member.name %>!
    <% elsif @knock.lock? %>
      Thanks for visiting CoworkBuffalo! The door is now locked.
    <% elsif @knock.toggle? %>
      The door will unlock in a moment! Welcome to CoworkBuffalo, <%= @member.name %>!
    <% else %>
      Sorry, I didn't understand that. Please send another SMS with one of the following choices: <%= Knock::TAGS.join(', ') %>
    <% end %>
  </Message>
</Response>
